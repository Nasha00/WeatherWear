<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res/org.reyan.weatherwear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <com.github.pwittchen.weathericonview.WeatherIconView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        custom:weatherIconColor="@color/mediumorchid"
        custom:weatherIconSize="100" />

    <TextView
        android:id="@+id/temperature"
        android:text="temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/cityName"
        android:text="cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperature"
        android:layout_marginLeft="160dip"
        android:textSize="22sp"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/humidity"
        android:text="humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityName"
        android:layout_marginLeft="160dip" />

    <TextView
        android:id="@+id/pressure"
        android:text="pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humidity"
        android:layout_marginLeft="160dip" />

    <TextView
        android:id="@+id/wind"
        android:text="wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pressure"
        android:layout_marginLeft="160dip" />

    <TextView
        android:id="@+id/recommender"
        android:text="recommerder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="160dip"/>

    <!--<ListView-->
    <!--android:id="@+id/listView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Hi,this is Wiwi.Good morning my darling. Your Special recommendation"-->
    <!--android:layout_below="@+id/recommender"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:background="#fff5d376" />-->

    <ImageButton
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommender"
        android:layout_marginLeft="160dip"
        android:src="@drawable/ic_info_black_24dp"
        android:contentDescription="head_part_recommender">
    </ImageButton>

    <ImageButton
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommender"
        android:layout_toRightOf="@+id/head"
        android:src="@drawable/ic_info_black_24dp"
        android:contentDescription="top_recommender">
    </ImageButton>

    <ImageButton
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginLeft="160dip"
        android:src="@drawable/ic_info_black_24dp"
        android:contentDescription="bottom_recommender">
    </ImageButton>

    <ImageButton
        android:id="@+id/shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_toRightOf="@+id/bottom"
        android:src="@drawable/ic_info_black_24dp"
        android:contentDescription="shoes_recommender">
    </ImageButton>

    <Button
        android:id="@+id/moreinfo"
        android:text="Wiwi wanna tell you more :)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
